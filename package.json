{
  "name": "lotips",
  "scripts": {
    "build": "pnpm build -r",
    "test": "pnpm test -r",
    "lint:fix": "eslint . --fix",
    "ci:publish": "pnpm run build && pnpx changeset publish",
    "ci:version": "pnpx changeset version",
    "ci:snapshot": "pnpx changeset version --snapshot beta",
    "ci:prerelease": "pnpm run build && pnpx changeset publish --tag beta",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.21.1"
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.5.1",
    "@changesets/cli": "^2.16.0",
    "@types/jest": "^25.2.3",
    "@types/react": "^16.14.24",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "1.19.1",
    "react": "^16.14.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    },
    "cz-emoji": {
      "scopes": [
        "config",
        "core"
      ]
    }
  }
}
