{
  "name": "lotips",
  "scripts": {
    "build": "pnpm build -r",
    "test": "pnpm test -r",
    "lint:fix": "eslint . --fix",
    "ci:publish": "pnpm run build && pnpx changeset publish",
    "ci:version": "pnpx changeset version",
    "ci:snapshot": "pnpx changeset version --snapshot beta",
    "ci:prerelease": "pnpm run build && pnpx changeset publish --tag beta",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.16.0"
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.1.3",
    "@changesets/cli": "^2.16.0",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.23",
    "eslint": "^7.31.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.1",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "react": "^16.13.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
